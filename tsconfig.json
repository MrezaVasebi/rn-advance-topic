{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "hooks/*",
        "screens/*",
        "classes/*",
        "ui-config/*",
        "components/*",
        "components/texts/*",
        "components/inputs/*",
        "components/buttons/*"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
